= form_for(@tabletop_game) do |f|
  - if @tabletop_game.errors.any?
    #error_explanation
      %h2 #{pluralize(@tabletop_game.errors.size, "error")} prohibited this game from being saved:
      %ul
        - @tabletop_game.errors.full_messages.each do |msg|
          %li #{msg}

  .row.mb-3
    .col-sm-3
      = f.label :image, class: 'form-label'
    .col-sm-9
      = f.file_field :image, class: 'form-control'
      - if f.object.image?
        = image_tag f.object.image.url(:default), alt: f.object.name

  .row.mb-3
    .col-sm-3
      = f.label :name, class: 'form-label'
    .col-sm-9
      = f.text_field :name, class: 'form-control'

  .row.mb-3
    .col-sm-3
      = f.label :players, class: 'form-label'
    .col-sm-9
      = f.text_field :players, class: 'form-control'

  .row.mb-3
    .col-sm-3
      = f.label :bgg_url, 'BoardGameGeek', class: 'form-label'
    .col-sm-9
      = f.text_field :bgg_url, class: 'form-control'

  .row.mb-3
    .col-sm-3
      = f.label :other_info, class: 'form-label'
    .col-sm-9.large_textarea
      = f.text_area :other_info, class: 'form-control'

  .row.mb-3
    .col-sm-3
      = f.label :expansions, class: 'form-label'
    .col-sm-9.large_textarea
      = f.text_area :expansions, class: 'form-control'

  .centered
    = f.submit (f.object.new_record? ? 'Add' : 'Update')+" tabletop game", class: 'btn btn-primary'