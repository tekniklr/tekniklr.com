%li
  - if book[:image_url] && book[:amazon_url] && (book[:similarity] >= SIMILAR_THRESHOLD)
    = link_to image_tag(book[:image_url], :alt => book[:title], :title => book[:title]), book[:amazon_url]
  - elsif book[:image_url] && book[:amazon_title].blank?
    = link_to image_tag(book[:image_url], :alt => book[:title], :title => book[:title]), book[:url]
  - else
    = link_to book[:title], book[:url]
  %p{:class => "when fade#{fade}"}
    - if book[:published]
      = how_long_ago(book[:published])