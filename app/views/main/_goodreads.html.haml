%li
  - if book[:image_url]
    = link_to image_tag(book[:image_url], alt: book[:title], title: book[:title]), book[:url], target: '_blank'
  - else
    = link_to book[:title], book[:url], target: '_blank'
  %p{:class => "when fade#{fade}"}
    - if book[:published]
      = how_long_ago(book[:published])