- unless photo[:src].blank?
  %li
    = link_to image_tag(photo[:src], alt: photo[:title], title: HTMLEntities.new.decode(strip_tags(photo[:summary]).sub(/tekniklr posted a photo:/, '').strip)), photo[:url], target: '_blank'
    - if !photo[:title].blank?
      %p.caption
        = truncate photo[:title], length: 60
    %p{:class => "when fade#{fade}"}
      - if photo[:published]
        = time_ago_in_words(photo[:published])+' ago'