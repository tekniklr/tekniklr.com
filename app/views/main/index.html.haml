#front_page

  - unless @post.blank?
    %h1
      = link_to 'Blogs', '/wpblog'
    = render 'blog_post', :post => @post

  %h1
    = link_to 'Tweets', 'http://twitter.com/tekniklr'
  - @tweets.each do |tweet|
    = render 'tweet', :tweet => tweet
  .right
    = link_to 'Follow @tekniklr', 'http://twitter.com/tekniklr', :class => 'twitter-follow-button', 'data-align' => 'right'

        
  - unless @getglue.blank?
    %h1
      = link_to 'Does', 'http://getglue.com/tekniklr'
    %ul#getglue
      - @getglue.each do |item|
        = render 'getglue', :item => item

  - unless @bookmarks.blank?
    - fade_bookmarks = 0
    %h1
      = link_to 'Saves', 'http://www.delicious.com/tekniklr'
    %ul#delicious
      - @bookmarks.each do |bookmark|
        = render 'bookmark', :bookmark => bookmark, :fade => fade_level(@bookmarks.count, fade_bookmarks)
        - fade_bookmarks += 1

  #footnote
    
  - content_for :header do
    %link{:rel => "dns-prefetch", :href => "http://twitter.com"}/

  - content_for :javascript do    
    %script{:type => 'text/javascript', :src => 'http://platform.twitter.com/widgets.js'}
