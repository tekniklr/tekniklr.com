%h1
  = link_to 'Tweets', 'http://twitter.com/tekniklr'
- @tweets.each do |tweet|
  = render 'tweet', :tweet => tweet
.right
  = link_to 'Follow @tekniklr', 'http://twitter.com/tekniklr', :class => 'twitter-follow-button', 'data-align' => 'right'

- unless @blog_post.blank? or @blog_post.match(/Fatal error: /)
  %h1
    = link_to 'Blogs', '/wpblog'
  = raw @blog_post # if I can't trust my own blog I'm pretty screwed anyway

%h1
  = link_to 'Consumes', 'http://www.allconsuming.net/person/tekniklr/'
#allconsuming
  %script{:type => "text/javascript", :src  => "http://www.allconsuming.net/person/tekniklr/completed_js/all/7?suppress_header=1"}
    
