#front_page

  - unless @post.blank?
    %h1
      = link_to 'Blogs', '/wpblog'
    = render 'blog_post', :post => @post
        
  - unless @getglue.blank?
    %h1
      = link_to 'Plays / Reads / Watches / Listens', 'http://getglue.com/tekniklr'
    %ul#getglue
      - @getglue.each do |item|
        = render 'getglue', :item => item

  - unless @bookmarks.blank?
    - fade_bookmarks = 0
    %h1
      = link_to 'Bookmarks', 'http://www.delicious.com/tekniklr'
    %ul#delicious
      - @bookmarks.each do |bookmark|
        = render 'bookmark', :bookmark => bookmark, :fade => fade_level(@bookmarks.count, fade_bookmarks)
        - fade_bookmarks += 1

  - unless @lastfm.blank?
    %h1
      = link_to 'Scrobbles', 'http://www.last.fm/user/tekniklr'
    %ul#lastfm
      - @lastfm.each do |song|
        = render 'lastfm', :song => song

  #footnote
    
  - content_for :header do
    %link{:rel => "dns-prefetch", :href => "http://twitter.com"}/

  - content_for :javascript do    
    %script{:type => 'text/javascript', :src => 'http://platform.twitter.com/widgets.js'}
