- unless @tumblr_posts.blank?
  #single_post
    %h1
      = link_to 'Blogs', "http://#{WPDOMAIN}/wpblog/"
    = render 'blog/post', :post => @tumblr_posts.first
    
%h1
  = link_to 'Tweets', 'http://twitter.com/tekniklr'
#twitter-widget
  <a class="twitter-timeline" data-chrome="noheader nofooter" data-dnt=true href="https://twitter.com/tekniklr" data-widget-id="256680555926654976">Tweets by @tekniklr</a>
  <script>!function(d,s,id){var js,fjs=d.getElementsByTagName(s)[0];if(!d.getElementById(id)){js=d.createElement(s);js.id=id;js.src="//platform.twitter.com/widgets.js";fjs.parentNode.insertBefore(js,fjs);}}(document,"script","twitter-wjs");</script>

- if !@flickr_photos.blank? && @flickr_photos.count > 1
  - fade_photos = 0
  .photos_block
    %h1
      = link_to 'Pictures', 'http://www.flickr.com/photos/tekniklr/'
    %ul#flickr
      - @flickr_photos.each do |photo|
        = render 'photo', :photo => photo, :fade => fade_level(@flickr_photos.count, fade_photos)
        - fade_photos += 1

- if !@delicious.blank? && @delicious.count > 1
  - fade_bookmarks = 0
  .bookmarks_block
    %h1.less_space
      = link_to 'Bookmarks', 'http://www.delicious.com/tekniklr'
    %ul#delicious
      - @delicious.each do |bookmark|
        = render 'bookmark', :bookmark => bookmark, :fade => fade_level(@delicious.count, fade_bookmarks)
        - fade_bookmarks += 1

- if !@gaming.blank? && @gaming.count > 1
  - fade_games = 0
  .games_block
    %h1
      Games
    %ul#gaming
      - @gaming.each do |item|
        = render 'gaming', :item => item, :fade => fade_level(@gaming.count, fade_games)
        - fade_games += 1

