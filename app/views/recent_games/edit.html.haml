%h1 Update a recent game

= form_for(@recent_game) do |f|
  - if @recent_game.errors.any?
    #error_explanation
      %h2 #{pluralize(@recent_game.errors.count, "error")} prohibited this game from being saved:
      %ul
        - @recent_game.errors.full_messages.each do |msg|
          %li #{msg}

  .row
    .left
      = f.label :name
    .right
      = @recent_game.name
    .clear

  .row
    .left
      = f.label :platform
    .right
      = @recent_game.platform
    .clear

  .row
    .left
      = f.label :started_playing, 'Started'
    .right
      = f.date_select :started_playing
    .clear

  .row
    .left
      = f.label :url
    .right
      - if @recent_game.image?
        = link_to @recent_game.url
      - else
        \-
    .clear

  .row
    .left
      = f.label :image
    .right
      - if @recent_game.image?
        = image_tag @recent_game.image.url(:default), alt: @recent_game.name, align: 'left', hspace: 10
      - else
        \-
    .clear

  .center
    = f.submit "Update game"

.right
  = link_to 'remove this game', @recent_game, :method => :delete, :data => { :confirm => "Are you sure you want to remove #{@recent_game.name}?" }