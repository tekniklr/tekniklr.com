.exp_metadata
  .left
    %p
      %strong #{experience.title}
    %p
      %em
        = experience.affiliation_link ? link_to(experience.affiliation, experience.affiliation_link): experience.affiliation
  .right
    %p #{experience.start_date.to_formatted_s(:resume_date)} ~ #{experience.end_date ? experience.end_date.to_formatted_s(:resume_date) : "present"}
    %p #{experience.location}
  .clear
- if !experience.tasks.blank?
  .tasks
    %ul
      - experience.tasks.split("\n").each do |task|
        %li
          = sanitize task, tags: %w(a strong em u), attributes: %w(href target name title src alt class)
%p.centered
  = link_to 'Edit', edit_experience_path(experience), :remote => true
  = link_to('Delete', experience, :data => { :confirm => "Are you sure you want to delete #{experience.title} @ #{experience.affiliation}?" }, :method => :delete, :remote => true)